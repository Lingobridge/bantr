{
  "compilerOptions": {
    "target": "ES6", // Set the JavaScript target version
    "module": "commonjs", // Set the module system (CommonJS for Node.js)
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src" // Specify the root directory of input files
  },
  "include": ["src/**/*"], // Specify which files to include in the compilation
  "exclude": ["node_modules", "**/*.test.ts"] // Specify which files to exclude from the compilation
}
